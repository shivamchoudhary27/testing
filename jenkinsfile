pipeline {
    agent any

    stages {
        stage('pull') {
            steps {
                sh 'git pull origin main'
            }
        }
        stage('deploy to remote server') {
            steps {
	    	sh 'scp $(WORKSPACE)/index.html ubuntu@52.66.243.6:/var/www/html/'
                sh 'sudo systemctl restart apache2'
            }
        }
    }
}
